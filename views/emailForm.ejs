<% include ./partials/header %>

<div class="ui container" id="cusomersDisplay">

  <div class="ui container" id="emailFormMain">
  <form class="ui form" action="/emailSend" method="POST">
    <div class="ui huge header">Send an Email</div>
    <div class="field">
      <label>Template</label>
      <div class="fields">
        <div class="field">
          <select class="ui fluid search dropdown" name="template">
            <% templates.forEach(function(template) { %>
                <option value=""><%= template.id %></option>
          <%  }); %>
          </select>
        </div>
      </div>
    </div>
    <a href="/templatePreview" class="ui button" type="button">Preview</a>
    <div class="field">
      <label>Subject</label>
      <input type="text" name="subject" value="" placeholder="Subject">
    </div>
    <div class="field">
      <label>Body</label>
      <textarea type="text" name="emailText" value="" placeholder=""></textarea>
    </div>
    <button class="ui button" type="submit">Send</button>
    <a href="/"  class="ui button" type="button">Cancel</a>
  </form>
  </div>
</div>
<% include ./partials/footer %>
